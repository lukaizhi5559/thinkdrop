{
  "name": "thinkdrop",
  "version": "1.0.0",
  "description": "Lightweight Electron app that communicates with VS Code Copilot via extension bridge",
  "main": "src/main/main.js",
  "type": "commonjs",
  "scripts": {
    "dev": "concurrently \"yarn dev:main\" \"yarn dev:renderer\"",
    "dev:main": "electron src/main/main.js",
    "dev:renderer": "NODE_NO_WARNINGS=1 vite",
    "build": "yarn build:renderer && electron-builder",
    "build:renderer": "vite build",
    "start:services": "bash scripts/start-services.sh",
    "stop:services": "bash scripts/stop-services.sh",
    "restart:services": "yarn stop:services && sleep 2 && yarn start:services"
  },
  "keywords": [
    "electron",
    "copilot",
    "vscode",
    "screen-capture"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "postcss": "^8.4.0",
    "rollup": "^4.58.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "@nut-tree-fork/nut-js": "4.2.6",
    "@radix-ui/react-slot": "^1.0.0",
    "@thinkdrop/stategraph": "github:lukaizhi5559/thinkdrop-stategraph-module",
    "@types/react-syntax-highlighter": "^15.5.13",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "lucide-react": "^0.263.0",
    "node-fetch": "^2.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.0",
    "react-syntax-highlighter": "^15.5.0",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.0",
    "screenshot-desktop": "^1.15.1",
    "supports-color": "^10.2.2",
    "tailwind-merge": "^2.0.0",
    "tailwindcss-animate": "^1.0.7",
    "tesseract.js": "^7.0.0",
    "ws": "^8.19.0"
  },
  "build": {
    "appId": "com.standalone.copilot",
    "productName": "Copilot Screen Assistant",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/main/**/*",
      "dist-renderer/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    }
  }
}
